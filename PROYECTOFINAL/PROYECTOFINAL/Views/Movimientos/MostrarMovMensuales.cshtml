
@{
    ViewBag.Title = "ListadoPorMes";
}

@using PROYECTOFINAL.Models
@model List<movimientosmodel>

<h2>Listado de movimientos por mes</h2>

@if (Model.Count > 0)
{
    <div id="mostrar">
        <table class="table-bordered">
            <tr>
                <th>Concepto</th>
                <th>Salida/Entrada</th>                
                <th>Monto total</th>
                <th>Fecha</th>
                
            </tr>

            @{
                var totalEntradas = 0;
                var totalSalidas = 0;
            }

            @foreach (movimientosmodel item in Model)
            {                
                <tr>
                    <td>@item.concepto</td>
                    <td>@item.entradaSalida</td>
                    <td>@item.Fecha</td>
                    <td>@item.monto</td>                    
                </tr>

                if (item.entradaSalida == "Ingreso") { totalEntradas+=item.monto; } else { totalSalidas+=item.monto; }
            }

            <tfoot>
                <tr>
                    <th>Total entradas</th>
                    <td>
                       @totalEntradas
                          
                    </td>
                    <th>Total salidas</th>
                    
                        <td>
                           @totalSalidas
                        </td>
                    
                </tr>
            </tfoot>
        </table>
        <br>
        

    </div>
}
else
{
    <h5>No se registraron movimientos del mes elegido!</h5>
}


<a href="/Home/Index">Inicio</a>



