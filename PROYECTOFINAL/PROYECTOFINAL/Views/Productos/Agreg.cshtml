
@{
    ViewBag.Title = "Agregar";
}



<!--lista los productos, con la opcion de editar/ eliminar y boton de agregar-->


@using PROYECTOFINAL.Models;
@model productomodel



<h2>Agregar</h2>

<form action="../Productos/Agregar" method="POST">

    <label id="Nombre" name="Nombre" class="TextoAgregar">Nombre</label>
    <input type="text" name="Nombre" id="Nombre" class="Selects" />
    <br /> <br />

    <label id="Precio" name="Precio" class="TextoAgregar">Precio</label>
    <input type="number" name="precio" id="precio" class="Selects" />


    <br /> <br />

    <label id="categ" name="categ" class="TextoAgregar">Categoria</label>

    <select id="categoria" name="categoria" class="Selects">

        <option value="0"> Seleccionar</option>

        @foreach (categoriamodel item in categoria.ListarCategorias())
        {
            <option value="@item.id"> @item.nombre</option>
        }

    </select>
    <br />

    <label id="stkActual" name="stkActual" class="TextoAgregar">Stock actual</label>
    <input type="number" name="stockActual" id="stockActual" min="1" class="Selects" />
    
    <br />
    <label id="stkmin" name="stkmin" class="TextoAgregar">Stock minimo</label>    
    <input type="number" name="stockMinimo" id="stockMinimo" min="1" class="Selects"/>

    <br /><br />

    <input type="submit" value="Agregar producto" />

</form>