
@{
    ViewBag.Title = "Editar";
}



@using PROYECTOFINAL.Models
@model categoriamodel

<h2>Editar</h2>


<form action="../Editar" method="POST" name="formulario" id="formulario">


    <label for="Nombr" class="col-sm-1 control-label TextoAgregar">Nombre</label>
