
@{
    ViewBag.Title = "Editar";
}



@using PROYECTOFINAL.Models
@using Libreria;
@model productomodel
@{
    var idLocal = Session["idLocal"];
    idLocal = Convert.ToInt16(idLocal);
 }
<h2>Editar</h2>


<form action="../Editar" method="POST" name="formulario" class="form-horizontal" id="formulario">

   <div class="form-group">
        <label for="Nombr" class="col-sm-1 control-label TextoAgregar">Proveedor</label>
        <div class="col-sm-10">
            <select id="proveedor" name="proveedor" class="form-control" required>

                <option value="0"> Seleccionar</option>

                @foreach (proveedormodel item in proveedor.ListarProveedores())
                {
                    if (item.idProveedores == Model.IdProveedor)
                    {
                        <option selected value="@item.idProveedores"> @item.nombre</option>
                    }
                    else
                    {
                        <option value="@item.idProveedores"> @item.nombre</option>
                    }


                }

            </select>
        </div>
            <br />
    </div>

    <div class="form-group">

        <label for="Nombr" class="col-sm-1 control-label TextoAgregar">Categoria</label>

        <div class="col-sm-10">
            <select id="categoria" name="categoria" class="form-control" required>

                <option value="0"> Seleccionar</option>

                @foreach (categoriamodel item in categoria.ListarCategorias(Convert.ToInt16(idLocal)))
                {
                    if (item.id == Model.IdCategoria)
                    {
                        <option selected value="@item.id"> @item.nombre</option>
                    }
                    else
                    {
                        <option value="@item.id"> @item.nombre</option> }
                    }

            </select>
            <br />
            </div>

        </div>

    <div class="form-group">

        <label for="Nombr"  class="col-sm-1 control-label TextoAgregar">Nombre</label>

        <div class="col-sm-10">

            <input type="text" name="Nombre" id="Nombre" class="form-control" value="@Model.nombre" required />
            <br /> 

       </div>
    </div>

    <div class="form-group">

        <label for="Nombr" class="col-sm-1 control-label TextoAgregar">Precio</label>

        <div class="col-sm-10">
            <input type="number" name="precio" id="precio" class="form-control" value="@Model.precio" required />
        </div>
    </div>
   
    <div class="form-group">

            <label for="Nombr" class="col-sm-1 control-label TextoAgregar">Stock actual</label>

        <div class="col-sm-10">
            <input type="number" name="stockActual" id="stockActual" value="@Model.stockactual" class="form-control"  disabled required />
        </div>
    </div>
            <br /   >
    <div class="form-group">
        <label for="Nombr" class="col-sm-1 control-label TextoAgregar">Stock minimo</label>
        <div class="col-sm-10">
            <input type="number" name="stockMinimo" id="stockMinimo" min="0" class="form-control" value="@Model.stockminimo" required />
        </div>
    </div>
            <br /><br />

    <br> <br>
   
         
    <input type="submit" class="btn btn-default" value="Actualizar producto" />
    </form>
