@using PROYECTOFINAL.Models
@model List<productomodel>

<div id="SelectProducto">

    <label for="prov" class="control-label">Producto</label>

    <select name="prod" class="form-control" id="prod">

        <option value="0">Seleccionar</option>

        @foreach (productomodel item in Model)
        {
            <option value="@item.id"> @item.nombre</option>
        }

    </select>
    <br />

    <label for="prov" class="control-label">Cantidad</label>
    <input type="number" class="form-control" id="cantidad" name="cantidad"  required min="1"/>
    <br>

    <label for="prov" class="control-label">Costo unitario</label>
    <input type="number"  name="unitario" id="unitario" class="form-control" />
    <br>

    <label for="prov" class="control-label">Monto</label>
    <input type="number" name="monto" id="monto" class="form-control" />

    <br> <br>
</div>