
@{
    ViewBag.Title = "PoductosXProvedor";
}

@using PROYECTOFINAL.Models
@using Libreria;
@model List<proveedormodel>

<script>
    $(document).ready(function () {
        $("#proveedor").change  (function (e) {
            $.get("/Proveedores/SelectProveedor", { id: e.target.value }, function (response) {
                $("#divSelectProveedor").html(response);
            });
        });
    });
</script>

<h2>Productos por proveedor</h2>

<div id="proveedor2">
    <form method="post">
        <select name="proveedor" class="form-control" id="proveedor">
           <option>Seleccionar</option>
             @foreach (proveedormodel item in Model)
            {
                <option value="@item.idProveedores">@item.nombre</option>
            }
        </select>
        
    </form>
</div>

<div id="divSelectProveedor"></div>