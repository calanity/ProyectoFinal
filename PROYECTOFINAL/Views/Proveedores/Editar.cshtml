
@{
    ViewBag.Title = "Editar";
}



@using PROYECTOFINAL.Models
@using Libreria;
@model proveedormodel

<h2>Editar</h2>


<form action="../Editar" method="POST" name="formulario" id="formulario">


    <label for="prov" class="control-label TextoAgregar">Proveedor</label>
    <input type="text" name="nombre" id="nombre" class="form-control" value="@Model.nombre">
    <br />

    <label for="prov" class="control-label TextoAgregar">Saldo</label>
    <input type="number" name="saldo" id="saldo" class="form-control"  disabled value="@Model.saldo" />
      
    
    <br />
    <label for="prov" class="control-label TextoAgregar">Telefono</label>
    <input type="number" name="telefono" id="telefono" class="form-control" value="@Model.telefono">

    <br> <br>

    <input type="submit" class="btn btn-default" value="Actualizar proveedor" />
</form>
