
@{
    ViewBag.Title = "CajaMensual";
}


<div>
    <h3>Elija mes a listar ventas</h3>

    <form action="../Ventas/MostrarVentasMensuales" class="form-inline" method="POST">
        <div class="form-group">
            <label for="Nombr">Mes:</label>
            <select class="form-control" name="mes" id="mes">
                <option value="1">Enero</option>
                <option value="2">Febrero</option>
                <option value="3">Marzo</option>
                <option value="4">Abril</option>
                <option value="5">Mayo</option>
                <option value="6">Junio</option>
                <option value="7">Julio</option>
                <option value="8">Agosto</option>
                <option value="9">Septiembre</option>
                <option value="10">Octubre</option>
                <option value="11">Noviembre</option>
                <option value="12">Diciembre</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Nombr">Año: </label>
            <input class="form-control" type="number" value="2016" id="año" name="año" required min="2014" max="2020" />
        </div>
        <br /><br />
       <input class="btn btn-default" type="submit" value="Listar" name="Listar" />
                    
    </form>
    <br />
    <a href="/Caja/Index">Volver</a>
</div>