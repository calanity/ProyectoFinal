
@{
    ViewBag.Title = "ListarMovDia";
}
@using PROYECTOFINAL.Models
@model List<movimientosmodel>
   @{var fecha = ViewBag.Fecha;
       fecha = fecha.Date;
       var fecha2 = DateTime.Today;
       fecha2 = fecha2.Date;
    }
 
<h3>Listar movimientos de la caja del dia elegido</h3>

@if (Model.Count > 0)
{
    <table class="table-bordered">
        <tr>
            <th>Concepto</th>
            <th>Entrada/Salida</th>
            <th>Monto</th>
            <th>Fecha</th>          
           
            
        </tr>

        @foreach (movimientosmodel item in Model)
        {
            <tr>
                <td>@item.concepto</td>
                <td>@item.entradaSalida</td>
                <td>@item.monto</td>
                <td>@item.Fecha</td>
             
                
            </tr>

        }

        <tfoot>
           <tr>
               <th>Caja actual</th>
               <td> @caja.TotalCajaActual((fecha))</td>
           </tr>           
        </tfoot>
       
</table>
}
else
{
    if (fecha == fecha2)
    {
        <h4>La caja actual del dia elegido es: $@caja.TotalCajaActual((fecha))</h4>
    }
    else
    {
        <h4>No se registraron movimientos en la caja el dia elegido</h4>
    }
}
<a href="/Caja/ListarMovimientosCaja">Volver</a>