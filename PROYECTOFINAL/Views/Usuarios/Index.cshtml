
@{
    ViewBag.Title = "Index";
}
@model int
<h2>Registración</h2>

@if(Model==1)
{ 
    <h3>Error en la registracion</h3>
}

<a class="" data-toggle="modal" data-target=".bootstrapmodal"> Ingresar </a>

<div class="modal fade bootstrapmodal">
    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <div class="modal-title">Iniciar sesion</div>

            </div>

            <div class="modal-body">
                <form method="post" action="/Usuarios/Ingresar">

                    <label>Ingrese su usuario</label>
                    <select name="nombre" class="form-control" id="nombre">

                        <option value="1">Concepcion</option>
                        <option value="2">Gualeguaychu</option>
                    </select>
                    <br />
                    <label>Ingrese la contraseña</label>
                    <input type="password" class="form-control" name="contraseña" id="contraseña" required />

                    <input type="submit" class="btn btn-default"  value="Ingresar" />
                </form>  
            </div>
        </div>
    </div>
</div>