
@using PROYECTOFINAL.Models
@model int

<script>
    
    function tarjeta(value , montoo) {

        if (value == 2)
        {
            cuotas.disabled = false;
            //monto = 
            var total= montoo + (montoo*10/100);
            document.getElementById('monto').value= total;
            
            //aumentar un 10%
        }
       
    }
</script>
<div>

    <label>Tipo tarjeta</label>

    <select name="tipo" id="tipo" onchange="tarjeta(value , @Model)">
        <option value="1">Debito</option>
        <option value="2">Credito</option>
    </select>
    <br />
    <label>Cantidad de cuotas</label>
    <input type="number" disabled name="cuotas" id="cuotas" min="1" max="12"/>
    <br />
    <label>Tarjeta</label>
    <select name="marca" id="marca"> 
        <option value="1">Visa</option>
        <option value="2">Cabal</option>
        <option value="3">Naranja</option>
        <option value="4">Consumax</option>
    </select>
    <br />
    <label>Cupon</label>
    <input type="number" id="cupon" required name="cupon" />
    <br />
    
    <label>Monto</label>
    <input type="number" contenteditable="false" id="monto" name="monto" value="@Model" />


    </div>