@using PROYECTOFINAL.Models
@model int

    @{
        ViewBag.Title = "Venta";
    }

        <h2>Venta</h2>
<div id="venta">
    @if(Model>0)
    { 

    @Html.Label("Subtotal:" + Model); <br><br>


    <form action="../Home/Fin" method="post">
        <div id="divSelecmediopago">
           @Html.Label("Medio de pago")
            <select name="mediopago" id="mediopago">
                <option value="1">Efectivo</option>
                <option value="2">Tarjeta</option>
            </select>
        </div>
        <br />
        <a href="/Home/Cancelar">Cancelar venta</a>
        <input type="submit" value="Finalizar venta" />

        </form>
    }

    else
    {   
        @Html.Label("No se ingresaron productos")
        <br>  
        <a href="/Home/Index">Inicio</a>
    }
</div>





